{
  "name": "online-saathi",
  "version": "1.0.0",
  "description": "Online Saathi - AI Chat Application",
  "private": true,
  "scripts": {
    "start": "cd api && npm start",
    "install:api": "cd api && npm install",
    "install:client": "cd client && npm install",
    "install:all": "npm run install:api && npm run install:client",
    "backend": "cd api && npm start",
    "backend:dev": "cd api && npm run dev",
    "frontend": "cd client && npm run preview",
    "frontend:dev": "cd client && npm run dev",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\" --kill-others",
    "build:frontend": "cd client && npm run build",
    "start:backend": "cd api && npm start",
    "start:frontend": "cd client && npm run preview"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thapahemraj/onlinesaathi-gpt.git"
  },
  "author": "Online Saathi Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
